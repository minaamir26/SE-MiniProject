<body>
  
	<div class="container">

  <% errors.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% }) %>

  <% infos.forEach(function(info) { %>
    <div class="alert alert-info" role="alert">
      <%= info %>
    </div>
  <% }) %>

	<div>
	<form method = "POST" enctype="multipart/form-data">
	<label>Welcome, </label>
	<label><%=user.name%></label>
	<%if(user.works.length==0){%>
	<label>You do not have a portofolio yet, add one work to create it</label>
	<%}%>
	<br>
	<img src="<%=user.image%>" alt="<%=user.image%>" height=180 width=180>
	<br>
	<label>Add work</label>
	<br>

	<input type="radio" id="1" name="type" value="URL" checked="" >URL
	<input type="radio" id="2" name="type" value="Screenshot">Screenshot
	
	<table style="width:80%">
	<tr>
	<td>
	<label>Description:</label>
	<input type="text" name="title1" id="title1">
	</td>
	<td>
	<label>URL:</label>
	</td>
	<td>
	<input type="url" name="url" id="url">
	</td>
  	</tr>

  	
  	<tr>
	<td>
	<label>Description:</label>
	
	<input type="text" name="title2" id="title2">
	</td>
	<td>
	<label>Screenshot:</label>
	</td>
	<td>
	<input type="file" name="image" id="image">
	</td>
  	</tr>
  	<br>
  	</table>

  	<button type="submit" onclick="return Validate()">Add a Project</button>

