  	<a href="/myportfolios" >View my  Portofolio</a>
  	<%}%>
  	<br>
  	<a href="/logout">Logout</a>
	</form>
	<div>

	<script type="text/javascript">
		function Validate(){
			if(document.getElementById("1").checked && 
			(document.getElementById("title1").value =="" || document.getElementById("url").value ==""))
			{
				alert("please fill in the title and the URL");
				return false;
			}
			if(document.getElementById("2").checked &&
			(document.getElementById("title2").value =="" || document.getElementById("image").value ==undefined))
			{
				alert("please fill in the title and upload the image")
				return false;
			}
			return true;
		}
	</script>
</body>