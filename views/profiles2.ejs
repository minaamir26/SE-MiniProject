<!DOCTYPE html>
<html lang="en">
<meta charset="utf-8">
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">


<body>
   <div class="container">

  <% errors.forEach(function(error) { %>
    <div class="alert alert-danger" role="alert">
      <%= error %>
    </div>
  <% }) %>

  <% infos.forEach(function(info) { %>
    <div class="alert alert-info" role="alert">
      <%= info %>
    </div>
  <% }) %>

  <a href="/addWork">Go Home !</a>

    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Your Projects
                </h1>
            </div>
        </div>
        <% for(var i=0; i<user.works.length;){%>
            <%  var ok = user.works[i]; if(ok.isURL){%>
            <!-- Iffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff -->
        <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" src="no-image"  width="180" height="180" alt="no-image">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= user.works[i].title %></h3>
                <a class="btn btn-primary" href="<%= user.works[i].URL %>">View Project <span class="glyphicon glyphicon-chevron-right">
               </span></a>
            </div>
        </div>
        <hr>
         <%}else{ %>
         <!-- elseeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee -->
         <div class="row">
            <div class="col-md-7">
                <a href="#">
                    <img class="img-responsive" width="180" height="180"  src="<%=user.works[i].image%>" alt="Project-image">
                </a>
            </div>
            <div class="col-md-5">
                <h3><%= user.works[i].title %></h3>
                </span></a>
            </div>
        </div>
        <hr>
        <%}i = i+1;}%>
    </div>
    <!-- jQuery -->
    <script src="js/jquery.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
